{
  "compilerOptions": {
    "outDir": "lib",
    // "outDir": "./out",
    "allowJs": true, //enables the build without .ts files
    "target": "ESNext",
    // "module": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": "./src",
    "paths": {
      "@/*": [
        "./*"
      ],
    },
    "typeRoots": [
      "./node_modules/@types",
      "types"
    ],
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules/",
    "**/*.test.ts",
  ]
}